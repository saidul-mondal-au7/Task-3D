extends layout

block content
  .container
      .row
        .logo
          h3
           = title
      .row
        .span12
          .mini-layout
            h3 Products Listing
             a(href='/exporttocsv' style="margin-left: 60%;") Export to CSV

            table.table.table-bordered
              thead
                tr
                  th ID
                  th Prodcut
                  th Price
                  th Category
                if products.length
                each item in products
                 tr
                   td #{item['_id']}
                   td #{item['product_name']}
                   td #{item['price']}
                   td #{item['category']}
